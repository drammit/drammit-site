{
  "name": "drammit-site",
  "version": "1.0.0",
  "description": "Drammit's website",
  "repository": "git@github.com:drammit/drammit-site.git",
  "author": "Gaya Kessler",
  "license": "MIT",
  "dependencies": {
    "handlebars": "^4.0.10",
    "node-sass": "^4.5.3"
  },
  "scripts": {
    "build": "npm run clean && npm run images && npm run html && npm run sass",
    "clean": "rm -r ./docs && mkdir docs",
    "images": "cp -R src/images docs/images",
    "html": "cp src/html/index.html docs/index.html",
    "sass": "node-sass src/sass/drammit.scss docs/drammit.css --output-style compressed"
  }
}
